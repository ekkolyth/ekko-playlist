# API Configuration
API_PORT=1337
WEB_PORT=3000

# API URL - Internal URL where the Go API server is running
# This should always be http://localhost:1337 (or http://localhost:${API_PORT})
# The web server proxies requests from the browser to this internal API
API_URL=http://localhost:1337

# Better Auth Configuration
# The public URL where your application is hosted
BETTER_AUTH_URL=http://localhost:3000

# Generate a secure random secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here-at-least-32-characters-long

# Comma-separated list of additional trusted origins (optional)
# This is used by Better Auth to prevent CSRF attacks
TRUSTED_ORIGINS=

# Database Configuration
# PostgreSQL connection string
DB_URL=postgres://user:password@host:port/database

# CORS Configuration (optional)
# Comma-separated list of allowed origins for API CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000
